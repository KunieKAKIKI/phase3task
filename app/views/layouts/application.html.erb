<!DOCTYPE html>
<html>
  <head>
    <title>Photoapp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#gnavi">
            <span class="sr-only">Bootstrap</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">写真</a>
        </div>
        <div id="gnavi" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "写真一覧", pictures_path %></li>
            <li><%= link_to '新規投稿',new_picture_path %></li>
          </ul>
        </div>
      </div>
    </nav>
          

  <div class="login">  
    <% if logged_in? %>
      <%= link_to "#{current_user.name}さんのマイページ", user_path(current_user.id), class: 'btn btn-info' %>
      <%= link_to "ログアウト", session_path(current_user.id), method: :delete %>
    <% else %>
      <%= link_to "登録", new_user_path, class: 'btn btn-info' %>
      <%= link_to "ログイン", new_session_path %>
    <% end %>
  </div>
  
  <div>  
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>    
    <% end %>
  </div>
  
    <%= yield %>
  </body>
</html>
